{
    "manifest_version": 3,
    "name": "Crafting", 
    "icons": {
        "16": "crafting_16.png",
        "32": "crafting_32.png",
        "48": "crafting_48.png",
        "128": "crafting_128.png"
    },
    "version": "1.0",
    "action":{
        "default_popup": "index.html"
    }, 
    "permissions": [
        "storage",
        "activeTab",
        "tabs", 
        "scripting"
    ],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content-script.js"]
        }
      ],
    "background": {
        "service_worker": "background.js"
  },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}